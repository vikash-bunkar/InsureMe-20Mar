            }
    } 
    
    stage('Docker Image Creation') {
      steps {
        sh 'docker build -t pratap1371/insure:1.0 .'
            }
    }
     stage('Docker-Login') {
           steps {
              withCredentials([usernamePassword(credentialsId: 'dockercreds', passwordVariable: 'dockerpassword', usernameVariable: 'dockerlogin')]) {
               sh 'docker login -u ${dockerlogin} -p ${dockerpassword}'
               // withCredentials([string(credentialsId: 'docker', variable: 'dockervariable')]) {                   
                        }
                }
}

    stage('Push Image to DockerHub') {
      steps {
        sh 'docker push pratap1371/insure:1.0'
            }
    } */
    stage('Deploy Application using Ansible') {
      steps {
        ansiblePlaybook credentialsId: 'sshid', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'deploy.yml', vaultTmpPath: ''
            }
    }

  }
}

